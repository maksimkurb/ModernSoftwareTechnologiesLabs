<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Ink Pad" Height="550" Width="370" Background="LightGray">
    <Grid>
        <InkCanvas x:Name="inkCanvas1" Background="LightYellow" />
        <Button x:Name="button1" Content="Clear" HorizontalAlignment="Left" Height="42" VerticalAlignment="Bottom"
                Width="82" Margin="10,0,0,10" Click="Button1_Click" />
        <Button x:Name="button2" Content="Close" HorizontalAlignment="Right" Height="42" VerticalAlignment="Bottom"
                Width="82" Margin="0,0,10,10" Click="Button2_Click" />
    </Grid>
</Window>