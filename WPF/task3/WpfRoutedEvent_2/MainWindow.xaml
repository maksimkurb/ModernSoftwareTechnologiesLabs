<Window x:Class="WpfRoutedEvent_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRoutedEvent_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBox x:Name="txtBox" HorizontalAlignment="Center"
                 TextWrapping="Wrap"
                 Text="" 
                 VerticalAlignment="Center" 
                 Width="200" />
        <StackPanel ButtonBase.Click="StackPanel_Click" HorizontalAlignment="Stretch"
                    VerticalAlignment="Center" Width="auto" MaxHeight="120" Grid.Column="1">
            <Button x:Name="butAdd" Content="x+x" Margin="0 5" />
            <Button x:Name="butMult" Content="x*x" Margin="0 5" />
            <Button x:Name="butSqrt" Content="√x" Margin="0 5" />
        </StackPanel>

    </Grid>
</Window>